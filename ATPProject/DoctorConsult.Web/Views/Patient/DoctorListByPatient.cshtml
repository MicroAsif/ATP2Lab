@model IEnumerable<DoctorConsult.Core.Entity.Model.DoctorProfileModel>

@{
    ViewBag.Title = "Patient | Doctor list";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="box">
    <section class="team">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-0">
                    <div class="col-lg-12">
                        <h2>Honarable Doctor List</h2>
                        <div class="row pt-md">

                            @foreach (var item in Model)
                            {
                                <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 profile">
                                    <div class="img-box">
                                        <img alt="profile-photo" src=@item.Image class="img-responsive">
                                    </div>

                                    <h3>@item.FullName</h3>
                                    <p>@item.Email</p>
                                    <p>@item.Specialist</p>

                                    <a href="@Url.Action("DoctorProfile", "Patient", new { doctorId = item.Id })" class="btn btn-primary btn-sm btn-block">View Details</a>
                                    <br />
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>