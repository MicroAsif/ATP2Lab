@model DoctorConsult.Core.ViewModel.PatientProfileViewModel
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@{ WebImage photo = null;
    var newFileName = "";
    var imagePath = "";

    if (IsPost)
    {
        photo = WebImage.GetImageFromRequest();
        if (photo != null)
        {
            newFileName = Guid.NewGuid().ToString() + "_" +
                Path.GetFileName(photo.FileName);
            imagePath = @"images\" + newFileName;

            photo.Save(@"~\" + imagePath);
        }
    }
}

<h2>Profile</h2>
<div>
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <div class="form-wrap">

                    @using (Html.BeginForm(FormMethod.Post))
    {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <fieldset>

                        @*<label for="Image">Image</label>*@
                        <img src="@Url.Content("a.jpg")" alt="IMAGE" />
                        <br />
                        
                    </fieldset>
                    @if (imagePath != "")
    {
                <div class="result">
                    <img src="@imagePath" alt="image" />

                </div>
}
                </div>
                <div class="form-group">
                    <label for="Name">Name:</label>

                    @Html.DisplayFor(model => model.Name, new { @class = "form-control" ,value="Sami" })
                    
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>

                    @Html.DisplayFor(model => model.Email, new { @class = "form-control", })
                   
                </div>

                <div class="form-group">
                    <label for="Age">Age</label>

                    @Html.DisplayFor(model => model.age, new { @class = "form-control" })
                   
                </div>

                <div class="form-group">
                    <label for="Birthday">Birthday</label>
                    @Html.DisplayFor(model => model.Birthday, new { @class = "form-control" })
                   
                </div>
                <div class="form-group">
                    <label for="Birthday">Blood Group: </label><br>
                    @Html.DisplayFor(model => model.BloodGroup, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Radio">Gender: </label><br>
                    @Html.DisplayFor(model => model.Gender, new { @class = "form-control" })

                </div>
                <div class="form-group">
                    <label for="dropdown">Division: </label><br>
                    @Html.DisplayFor(model => model.Division, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="dropdown">District: </label><br>
                    @Html.DisplayFor(model => model.Division, new { @class = "form-control" })
                </div>
                
}

                    <hr />
                </div>
            </div> <!-- /.col-xs-12 -->
        </div> <!-- /.row -->
    </div>

</div>
