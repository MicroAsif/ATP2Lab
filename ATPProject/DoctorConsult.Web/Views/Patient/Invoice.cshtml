@model DoctorConsult.Web.ViewModel.InvoiceViewModel

@{
    ViewBag.title = "Invoice";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}




<!-- title row -->
<div class="row">
    <div class="col-xs-12">
        <h2 class="page-header">
            <i class="fa fa-globe"></i> Doctor Consultancy Corporation.
            <small class="pull-right">Date: 4/19/2018</small>
        </h2>
    </div>
    <!-- /.col -->
</div>
<!-- info row -->
<div class="row invoice-info">
    <div class="col-sm-4 invoice-col">
        From
        <address>
            @*<strong>Dr. Carmen Z. Lamagna</strong><br>
            795 Folsom Ave, Suite 600<br>
            San Francisco, CA 94107<br>
            Phone: 01622689262<br>
            Email: xyz@aiub.edu*@

            @{ 
                if(Model.Doctor!=null)
                {
                    <strong>@Model.Doctor.FullName</strong><br/>
                    <strong><i class="glyphicon glyphicon-adjust"> @Html.DisplayName("Address: ")</i></strong> @Model.Doctor.Address<br/>
                    <strong><i class="glyphicon glyphicon-earphone"> @Html.DisplayName("Phone: ")</i></strong> @Model.Doctor.Phone
                }
            }

        </address>
    </div>
    
</div>
<!-- /.row -->
<!-- Table row -->
<div class="row">
    <div class="col-xs-12 table-responsive">
        <label>Medicines</label>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Serial</th>
                    <th>Medicine Name</th>
                    <th>Quantity</th>
                    <th>Days</th>
                    <th>Daily Times</th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    if(Model.Prescribtion!=null)
                    {
                        int i = 1;
                        foreach (var item in Model.Prescribtion.Medicines)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.Quantity</td>
                                <td>@item.Days</td>
                                <td>@item.DailyTimes</td>
                            </tr>
                            i++;
                        }
                    }
                }
                @*<tr>
                    <td>1</td>
                    <td>.Net extra</td>
                    <td>14</td>
                    <td>7</td>
                    <td>1-0-1</td>
                </tr>*@
                
            </tbody>
        </table>
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-xs-12 table-responsive">
        <label>Tests</label>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Serial</th>
                    <th>Test Name</th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    if(Model.Prescribtion!=null)
                    {
                        int i = 1;
                        foreach (var item in Model.Prescribtion.MedicalTests)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.TestName</td>
                            </tr>
                            i++;
                        }
                    }
                }
            </tbody>
        </table>
    </div>

</div>
<!-- /.row -->


<div class="row">
    <div class="col-xs-12">


        <label>Doctor's Comment</label>
        <textarea class="form-control" rows="3" disabled="">
        @{ 
            if (Model.Prescribtion != null)
            {
                @Model.Prescribtion.Comment
            }
        }
        </textarea>


    </div>

</div>
<!-- this row will not appear when printing -->
<div class="row no-print">
    <div class="col-xs-12">
        <a href="#" target="_blank" class="btn btn-default"><i class="fa fa-print"></i> Print</a>
        @*<button type="button" class="btn btn-success pull-right">
            //<i class="fa fa-credit-card"></i> Submit Payment
        </button>*@
        <button type="button" class="btn btn-primary pull-right" style="margin-right: 5px;">
            <i class="fa fa-download"></i> Generate PDF
        </button>
    </div>
</div>
