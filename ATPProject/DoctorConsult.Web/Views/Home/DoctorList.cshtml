@model IEnumerable<DoctorConsult.Core.Entity.Model.DoctorProfileModel>

@{
    ViewBag.Title = "Doctor List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Doctor List</h2>

<section class="team">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-0">
                <div class="col-lg-12">
                    <div class="row pt-md">
                        @{
                            int i = 0;
                        }

                        @foreach (var item in Model)
                        {
                            i++;

                            string link = "http://nabeel.co.in/files/bootsnipp/team/" + @i + ".jpg";

                        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 profile">
                            <div class="img-box">
                                <img alt="profile-photo" src=@link class="img-responsive">
                            </div>

                            <h3>@item.FullName</h3>
                            <p>@item.Email</p>
                            <p>@item.Specialist</p>
                            <p>@item.Id</p>
                            @*<p>@item.Location</p>*@

                            @Html.ActionLink("Details", "DoctorProfile", "Home", new { @class = "btn btn-primary btn-sm btn-block", id = item.Id })
                            <br />
                        </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>