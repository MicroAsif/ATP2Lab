
@model DoctorConsult.Core.Entity.ViewModel.SearchViewModel

@{
    ViewBag.Title = "Home Page";
}



@Html.AntiForgeryToken()
@Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="jumbotron" style="background-image: url('/Images/portal.jpg');">
    <h1>Find your doctor</h1>


    @using (Html.BeginForm("DoctorList", "Home"))
    {
        <div class="form-inline">
            <div class="form-group">
                @Html.DropDownListFor(model => model.CityName,
                                        new SelectList((IEnumerable<SelectListItem>)ViewBag.location, "Value", "Text"), "Select City",
                                        htmlAttributes: new { @class = "form-control" })

            </div>
            <div class="form-group">
                @Html.DropDownListFor(model => model.SpecialityName,
                                        new SelectList((IEnumerable<SelectListItem>)ViewBag.speciality, "Value", "Text"), "Select Speciality",
                                        htmlAttributes: new { @class = "form-control" })




            </div>
            <input type="submit" class="btn btn-success" value="Search"/>
        </div>
        @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "text-danger" }) <br/>
        @Html.ValidationMessageFor(model => model.SearchCatagory, "", new { @class = "text-danger" })
    }

</div>


<div class="col-lg-4 col-sm-4 text-center">
    <span><img style="height: 150px; width: 150px;" src="https://doctorola.com//frontend_assets/images/final.svg#svgView(viewBox(39,337,139,141))"></span>
    <div class="how_it_works_inside_text">
        <p class="how_it_works_inside_text_header text-center">SEARCH</p>
        <p class="how_it_works_inside_text_content text-center">
            Find your doctor easily with a minimum of effort. We've kept everything organised for you.
        </p>
    </div>
</div>

