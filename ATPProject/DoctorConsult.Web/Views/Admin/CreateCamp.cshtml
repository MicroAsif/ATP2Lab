@model DoctorConsult.Core.Entity.ViewModel.CreateCampViewModel

@{
    ViewBag.Title = "CreateCamp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("DoCampList", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="box">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="form-group">
                    <h4><i class="glyphicon glyphicon-pencil"></i> Create Campaign</h4>
                    <label asp-for="Campaign location">Campaign location</label>
                    <input type="text" asp-for="CampaignLocation" class="form-control" placeholder="Campaign Location" id="CampaignLocation" />
                    @Html.ValidationMessageFor(model => model.CampaignLocation, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="Campaign Date">Campaign Date</label>
                    @Html.Editor("CampaignDate", new { htmlAttributes = new { @class = "form-control mydatepicker", @placeholder = "Campaign date", id = "CampaignDate" } })
                    @Html.ValidationMessageFor(model => model.CampaignDate, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label asp-for="Campaign Duration"> Campaign Duration</label>
                    @Html.EditorFor(model => model.CampaignDuration, new { htmlAttributes = new { @class = "form-control", @placeholder = "Campaign Duration", id = "Status" } })
                    @Html.ValidationMessageFor(model => model.CampaignDuration, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-10 col-md-offset-1">
                <br />
                <div class="form-group">
                    <label asp-for="Campaign Rent"> Campaign Rent</label>
                    @Html.EditorFor(model => model.CampaignRent, new { htmlAttributes = new { @class = "form-control", @placeholder = "Campaign Rent", id = "Status" } })
                    @Html.ValidationMessageFor(model => model.CampaignRent, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-10 col-md-offset-10">
                <input type="submit" value="Create" class="btn btn-lg btn-primary" />
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Back to DashBoard", "Index")
    </div>
</div>
}