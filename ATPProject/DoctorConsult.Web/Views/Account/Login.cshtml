@model DoctorConsult.Core.Entity.ViewModel.LoginView

@{
    ViewBag.Title = "Login";
}

<div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h2 class="glyphicon glyphicon-log-in">Login</h2>
                <br />
                <br />
                <div class="form-wrap">

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label for="email" class="sr-only">Email</label>
                            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "somebody@example.com" })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label for="key" class="sr-only">Password</label>
                            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        @*<div class="checkbox">
                                <span class="character-checkbox" onclick="showPassword()"></span>
                                <span class="label">Show password</span>
                            </div>*@
                        <input type="submit" id="btn-login" class="btn btn-custom btn-lg btn-block" value="Log in">
                    }

                    @Html.ActionLink("Forgot password ?", "ForgetPassword", "Account", new { @class = "forget" })</br>
                    @Html.ActionLink("Create an account?", "Registration", "Home", new { @class = "forget" })
                    <hr />
                </div>
            </div> <!-- /.col-xs-12 -->
        </div> <!-- /.row -->
    </div>
</div>