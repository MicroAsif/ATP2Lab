@model IEnumerable<DoctorConsult.Core.Entity.Model.PatientProfileModel>

@{
    ViewBag.Title = "Patient List";
    Layout = "~/Views/Shared/_doctorDashboard.cshtml";
}

<section class="team">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-0">
                @* 1 *@
                <div class="col-lg-12">
                    <label class="btn btn-reddit">
                        Total Number of patients: @{
                            int count = 0;
                            foreach (var item in Model)
                            {
                                count++;
                            }
                            @count
                        }
                    </label>
                    @using (Html.BeginForm())
                    {
                        <div class="form-group-lg">

                            <div class="form-group">
                                <label for="Search">Search Patient</label>
                                <input class="form-control" id="#" placeholder="Search" type="search">
                            </div>

                            <div class="form-group">

                                <label>Group By</label>
                                <select class="form-control">
                                    <option>Name</option>
                                    <option>Location</option>
                                    <option>Age</option>
                                </select>


                            </div>

                            <input type="submit" class="btn btn-success" value="Search" /><br><br>




                        </div>

                    }
                    <div class="row pt-md">

                        @{
                            int i = 0;
                        }

                        @foreach (var item in Model)
                        {
                            i++;

                            string link = "http://nabeel.co.in/files/bootsnipp/team/" + @i + ".jpg";

                            <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 profile">
                                <div class="img-box">
                                    <img alt="profile-photo" src=@link class="img-responsive">

                                </div>

                                <h3>@item.Name</h3>
                                @*<p><strong>Age: </strong>@item.age</p>*@
                                <p><strong><i class="glyphicon glyphicon-tint"></i> Blood Group: </strong>@item.BloodGroup</p>
                                <p><strong><i class="fa fa-intersex"></i> Gender: </strong>@item.Gender</p>

                                <a href="@Url.Action("PatientsProblemPageForDoctor")" class="btn btn-warning btn-sm">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>

                                <a href="#" onclick="return confirm('Are you sure you want to delete this patient ?');" class="btn btn-danger btn-sm">
                                    <span class="glyphicon glyphicon-remove"></span>
                                </a>
                                <br />

                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>