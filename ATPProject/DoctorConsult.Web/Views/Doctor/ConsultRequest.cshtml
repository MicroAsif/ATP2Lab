@model IEnumerable<DoctorConsult.Core.Entity.Model.PatientsConsultModel>

@{
    ViewBag.Title = "ConsultRequest";
    Layout = "~/Views/Shared/_doctorDashboard.cshtml";
}

<div class="box">
    <section class="team">
        <div class="container">
            <div class="row">
                <div class="col-md-10 col-md-offset-0">
                    <div class="col-lg-12">
                        <div class="row pt-md">
                            <h2>Consult Request List</h2>
                            <div class="btn btn-reddit">
                                <label>Total accepted: 3</label>
                                <label>Total pending: 8</label>
                                <label>Total Request: 12</label>
                            </div>

                            <div class="form-group">

                                <label>Group By</label>
                                <select class="form-control">
                                    <option>Date(Assending)</option>
                                    <option>Date(Decending)</option>
                                </select>


                            </div>

                            @{
                                if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-12 profile">
                                            <div class="img-box">
                                                <img alt="profile-photo" src=@item.PatientProfileModel.Photo class="img-responsive">
                                            </div>

                                            <h3>@item.PatientProfileModel.Name</h3>
                                            <p><i class="glyphicon glyphicon-envelope"></i> @item.PatientProfileModel.Email</p>
                                            <p><strong>@Html.DisplayName("Age: ")</strong> @Html.DisplayName(item.PatientProfileModel.Age)</p>

                                            <a href="@Url.Action("ConsultRequestList", "Doctor")" title="reject" onclick="return confirm('Are you sure you want to reject this  ?');" class="btn btn-danger btn-sm">
                                                <span class="glyphicon glyphicon-remove"></span>
                                            </a>
                                            <a href="@Url.Action("PatientList")" title="accept" class="btn btn-success btn-sm">
                                                <span class="glyphicon glyphicon-ok"></span>
                                            </a>

                                            <a href="@Url.Action("PatientsProblemPageForDoctor", new { patientId = item.PatientProfileModel.Id })" title="details" class="btn btn-default btn-sm">
                                                <span class="glyphicon glyphicon-info-sign"></span>
                                            </a>
                                        </div>
                                    }
                                }
                            }
                        </div>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>