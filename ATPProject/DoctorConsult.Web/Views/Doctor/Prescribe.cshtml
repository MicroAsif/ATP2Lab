@model DoctorConsult.Core.Entity.ViewModel.PrescriptionViewModel

@{
    ViewBag.Title = "Prescribe";
    Layout = "~/Views/Shared/_doctorDashboard.cshtml";
}





<form>
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">create prescription</h3>
        </div>
        <br />
        <div class="row">

            

            <div class="col-md-8 col-md-offset-1">
                <div class="col-md-4">
                    <label asp-for="ReferToAnotherDr">Refer another Dr.</label>
                    <input type="text" asp-for="ReferToAnotherDr" class="form-control" placeholder="Type another dr. name" id="ReferToAnotherDr" />
                    @*@Html.ValidationMessageFor(model => model.PrescribtionNo, "", new { @class = "text-danger" })*@
                </div>
                <div class="col-md-4">
                    <label asp-for="ReferDiagnostic">Refer Diagnostic</label>
                    <input type="text" asp-for="ReferDiagnostic" class="form-control" placeholder="Diagnostic name" id="ReferDiagnostic" />
                    @*@Html.ValidationMessageFor(model => model.PrescribtionNo, "", new { @class = "text-danger" })*@
                </div>
                <div class="col-md-4">
                    <label asp-for="PrescribtionNo">Prescribtion No</label>
                    <input type="text" asp-for="PrescribtionNo" class="form-control" placeholder="Prescribtion Number" id="PrescribtionNo" />
                    @Html.ValidationMessageFor(model => model.PrescribtionNo, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-4">
                    <label asp-for="PrescribtionDate">Prescribtion Date</label>
                    @Html.Editor("PrescribtionDate", new { htmlAttributes = new { @class = "form-control mydatepicker", @placeholder = "Prescribtion date", id = "PrescribtionDate" } })
                    @Html.ValidationMessageFor(model => model.PrescribtionDate, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-4">
                    <label asp-for="Cause">Cause given by</label>
                    @Html.TextAreaFor(model => model.Cause, new { htmlAttributes = new { @class = "form-control", @placeholder = "Write Casue", id = "Status", @rows = 10, @cols = 400 } })
                    @Html.ValidationMessageFor(model => model.Cause, "", new { @class = "text-danger" })
                </div>
                <div class="col-xs-4">
                    <label asp-for="Comment">Dr. comment</label>
                    @Html.TextArea("Comment", new { htmlAttributes = new { @class = "form-control", @row=4, @placeholder = "Write conment", id = "Status", @rows = 10, @cols = 400 } })
                    @*@Html.ValidationMessageFor(model => model.Cause, "", new { @class = "text-danger" })*@
                </div>
                <div class="col-xs-4">
                    <label asp-for="GeneralInformation">Patient general information</label>
                    @Html.Editor("GeneralInformation", new { htmlAttributes = new { @class = "form-control", @placeholder = "Like: Allergy, Diabetics", id = "Status", @rows = 10, @cols = 400 } })
                    @*@Html.ValidationMessageFor(model => model.Cause, "", new { @class = "text-danger" })*@
                </div>
            </div>
            <div class="col-md-3 col-sm-4">
                <div class="info-box bg-red">
                    <span class="info-box-icon"><i class="ion ion-ios-cloud-download-outline"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">VISIT DOCTOR</span>
                        <span class="info-box-number"></span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 30%"></div>
                        </div>
                        <span class="progress-description">
                            30% Visit in 1 Year
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
            </div>
         
            <div class="col-md-3 col-sm-4">
                <div class="info-box bg-red">
                    <span class="info-box-icon"><i class="ion ion-ios-heart-outline"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">FREQUENTLY SICK</span>
                        <span class="info-box-number">15</span>
                        <div class="progress">
                            <div class="progress-bar" style="width: 70%"></div>
                        </div>
                        <span class="progress-description">
                            70% Sick in 30 Days
                        </span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
            </div>

           
            <!-- /.description-block -->
           
            <div class="col-md-8 col-md-offset-1">
                <div class="col-md-4 ">
                    <br />
                    <input type="button" value="Add Medicine" data-toggle="modal" data-target="#medicineModal" class="btn btn-primary" />
                </div>
            </div>

            

            <div class="col-md-8 col-md-offset-1">
                <br />
                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>Medicine Name</td>
                            <td>Quantity </td>
                            <td>Days</td>
                            <td>Daily Times</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody id="Items"></tbody>
                </table>
            </div>


            

            <div class="col-md-8 col-md-offset-1">
                <div class="col-md-4 ">
                    <br />
                    <input type="button" value="Add Medical Test" data-toggle="modal" data-target="#medicalTestModal" class="btn btn-primary" />
                </div>
            </div>
            <div class="col-md-8 col-md-offset-1">
                <br />
                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td>Medicine Test Name</td>
                            <td>Action</td>
                        </tr>
                    </thead>
                    <tbody id="Items"></tbody>
                </table>
            </div>

            
            <div class="col-md-8 col-md-offset-1">
                <div class="col-md-4 ">
                    <br />
                    <input type="submit" value="Save Prescription" class="btn btn-success" id="btnSubmit" />
                </div>
            </div>


        </div>

        <br />
    </div>

</form>


<!-- medicine modal form-->
<div class="row">
    <div class="col-md-6">
        <div class="modal fade bs-example-modal-sm" id="medicineModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <h4 class="modal-header">Medicine information</h4>
                    <div class="modal-body">
                        <div class="container">
                            <div class="col-md-12">
                                <label class="control-label">Medicine Name</label>
                                @Html.Editor("Medicine Name", new { htmlAttributes = new { @class = "form-control", @placeholder = "Write medicine Name", id = "name" } })
                            </div>
                            @*<div class="col-md-6">
                                <label class="control-label">Quantity</label>
                                @Html.Editor("Quantity", new { htmlAttributes = new { @class = "form-control", id = "Description" } })

                            </div>*@
                            <div class="col-md-6">
                                <label class="control-label">Days</label>
                                @Html.Editor("Days", new { htmlAttributes = new { @class = "form-control", id = "Price" } })
                            </div>

                            <div class="col-md-6">
                                <label class="control-label">Daytime</label>
                                @Html.Editor("Daytime", new { htmlAttributes = new { @class = "form-control", id = "Price" } })

                                @{
                                    List<SelectListItem> listItems = new List<SelectListItem>();
                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "0-0-1",
                                        Value = "1",
                                        Selected = true
                                    });

                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "0-1-0",
                                        Value = "2"
                                    });

                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "1-0-0",
                                        Value = "3"
                                    });

                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "1-1-0",
                                        Value = "4"
                                    });

                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "1-0-1",
                                        Value = "5"
                                    });

                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "0-1-1",
                                        Value = "6"
                                    });

                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "1-1-0",
                                        Value = "7"
                                    });

                                    listItems.Add(new SelectListItem
                                    {
                                        Text = "1-1-1",
                                        Value = "8"
                                    });

                                }

                                @Html.DropDownList("DayTime", listItems)



                            </div>

                        </div>
                    </div>

                    <div class="modal-footer">
                        <a id="btnAdd" class="btn btn-primary">
                            <span class="glyphicon glyphicon-plus"></span> Add
                        </a>
                        <a id="BtnClose" class="btn btn-danger" data-dismiss="modal">
                            <span class="glyphicon glyphicon-off"></span> Close
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- medicine modal form-->
<div class="row">
    <div class="col-md-6">
        <div class="modal fade bs-example-modal-sm" id="medicalTestModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <h4 class="modal-header">medicalTest information</h4>
                    <div class="modal-body">
                        <div class="container">
                            <div class="col-md-6">
                                <label class="control-label">Medical Test Name</label>
                                @Html.Editor("Medicine Test Name", new { htmlAttributes = new { @class = "form-control", @placeholder = "Write medical Test Name", id = "name" } })
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <a id="btnAdd" class="btn btn-primary">
                            <span class="glyphicon glyphicon-plus"></span> Add
                        </a>
                        <a id="BtnClose" class="btn btn-danger" data-dismiss="modal">
                            <span class="glyphicon glyphicon-off"></span> Close
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

