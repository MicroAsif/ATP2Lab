@model IEnumerable<DoctorConsult.Core.Entity.Model.PrescriptionModel>
@{
    ViewBag.Title = "Prescribtion List";
    Layout = "~/Views/Shared/_doctorDashboard.cshtml";
}

<div class="box">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-md-offset-0">
                <div class="form-group">
                    <h1>Prescribtion List</h1>
                    <label>Group By</label>
                    <select class="form-control">
                        <option>Date(Assending)</option>
                        <option>Date(Decending)</option>
                    </select>
                </div>

                @{
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4">
                            <div class="row pt-md">
                                <div class="col-lg-12 col-md-4 col-sm-4 col-xs-4 profile">
                                    <div class="img-box">
                                        <img alt="profile-photo" height="50%" width="50%" src=@item.Patient.Photo class="img-responsive">
                                    </div>

                                    <h3>@item.Patient.Name</h3>
                                    <p><i class="glyphicon glyphicon-envelope"></i> @item.Patient.Email</p>
                                    <p><i class="glyphicon glyphicon-tint"></i> Blood group: @item.Patient.BloodGroup</p>
                                    <a class="btn btn-xs btn-default btn-success active" href="@Url.Action("PrescribtionDetails")"><i class="glyphicon glyphicon-leaf"></i> Click to see full info.</a>
                                    <br />
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
</div>
